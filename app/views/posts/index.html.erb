<!-- app/views/posts/index.html.erb -->
 <h1>Welcome, <%= current_user.email %></h1>
<h2>Posts</h2>

<% @posts.each do |post| %>
  <div>
  <% if user_signed_in? %>
  <p><strong>Author:</strong> <%= post.user.email %></p>
   <% end %>
    <h2><%= post.title %></h2>
    <p><%= post.body %></p>

    <!-- Display author's name if a user is signed in -->
  </div>
  <hr>
<% end %>


